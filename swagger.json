{
  "openapi": "3.0.4",
  "info": {
    "title": "Price Encryption API",
    "description": "API to encrypt and decrypt prices. <h4>Additional Information </h4>",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://priceencryptiondecryption.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Check server health",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "OK" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/encrypt": {
      "post": {
        "tags": ["Encryption"],
        "summary": "Encrypt a price",
        "parameters": [
          {
            "name": "encryptionKey",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "integrityKey",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "price": { "type": "string", "example": "123.45" }
                },
                "required": ["price"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Encrypted price",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "encryptedPrice": {
                      "type": "string",
                      "example": "55mPuzTBIUqep2Kx_tebpjBGWi_5Y7jBFAOP"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "body": { "type": "object" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Encryption failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/decrypt": {
      "post": {
        "tags": ["Decryption"],
        "summary": "Decrypt a price",
        "parameters": [
          {
            "name": "encryptionKey",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "integrityKey",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "encryptedPrice": {
                    "type": "string",
                    "example": "55mPuzTBIUqep2Kx_tebpjBGWi_5Y7jBFAOP"
                  }
                },
                "required": ["encryptedPrice"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Decrypted price",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "decryptedPrice": { "type": "string", "example": "123.45" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "body": { "type": "object" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Decryption failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}